---
import Badge from '../ui/Badge.tsx';
import { GradientBlob } from '../ux/gradient-blob';
import { WaveDivider } from '../ux/wave-divider';

const skills = [
	"JavaScript",
	"TypeScript",
	"React",
	"Next.js",
	"Node.js",
	"Express",
	"MySQL",
	"HTML",
	"CSS",
	"Tailwind CSS",
	"Git",
	"Github",
]
---

<section id="skills" class="relative w-full py-12 md:py-24 lg:py-32 transition-colors duration-300">
	<WaveDivider/>
	<WaveDivider flip={true}/>
	<GradientBlob/>
	<div class="container px-4 md:px-6 relative z-10">
		<div class="flex flex-col items-center justify-center space-y-4 text-center">

			<div class="space-y-2">
				<h2 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl text-gray-900 dark:text-white transition-colors duration-300">Habilidades</h2>
				<p class="mx-auto max-w-[700px] text-muted-foreground-light dark:text-gray-300 md:text-xl transition-colors duration-300">
					Tecnolog√≠as y herramientas con las que trabajo
				</p>
			</div>
			<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 pt-8 w-full max-w-4xl">
				{skills.map((skill) => (
					<div class="flex items-center justify-center">
						<Badge className="w-fit px-4 py-2 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 transition-colors duration-300" size="md">{skill}</Badge>
					</div>
				))}
			</div>
		</div>
	</div>
</section>