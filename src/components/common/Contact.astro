---
import Github from "../../assets/github.svg";
import LinkedIn from "../../assets/linkedin.svg";
import Email from "../../assets/email.svg";
import Link from "../ui/Link";

---

<section id="contact" class="relative w-full py-12 md:py-24 lg:py-32 bg-muted/50 dark:bg-black-pearl-900">
    <div class="container px-4 md:px-6 relative z-10">
        <div class="flex flex-col items-center justify-center space-y-4 text-center">
            
            <div class="space-y-2">
                <h2 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl text-gray-900 dark:text-gray-100">Contáctame</h2>
                <p class="mx-auto max-w-[700px] text-muted-foreground md:text-xl dark:text-gray-400">
                    Contáctame para conocer oportunidades
                </p>
            </div>

            <div class="flex pt-8 gap-8 items-center">
                
                <div class="space-y-6 backdrop-blur-sm bg-gray-200/70 dark:bg-gray-800/70 p-6 rounded-lg">
                    
                    <div class="flex items-center gap-4">
                        <Email class="dark:text-gray-100"/>
                        <Link href="mailto:enzovelo7@gmail.com" target="_blank" rel="noopener noreferrer" className="text-gray-900 dark:text-gray-100">
                            enzovelo7@gmail.com
                        </Link>
                    </div>
                    
                    <div class="flex items-center gap-4">
                        <LinkedIn class="dark:text-gray-100"/>
                        <Link
                            href="https://www.linkedin.com/in/enzo-raul-velo-45100521b/"
                            target="_blank"
                            rel="noopener noreferrer"
                            className="text-gray-900 dark:text-gray-100"
                        >
                            www.linkedin.com/in/enzo-raul-velo-45100521b
                        </Link>
                    </div>

                    <div class="flex items-center gap-4">
                        <Github class="dark:text-gray-100"/>
                        <Link
                            href="https://github.com/Enzo2023Dev"
                            target="_blank"
                            rel="noopener noreferrer"
                            className="text-gray-900 dark:text-gray-100"
                        >
                            github.com/Enzo2023Dev
                        </Link>
                    </div>

                </div>

                
            </div>
        </div>
    </div>
</section>