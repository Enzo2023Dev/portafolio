---
import Github from "../../assets/github.svg";
import ExternalLink from "../../assets/external-link.svg";

import Badge from "../ui/Badge.tsx"
import Button from "../ui/Button.tsx"
import Card from "../ui/Card.tsx"

const projects = [
    {
        title: "Stream Links Motion",
        description: "Un sitio web para compartir enlaces de streaming con animaciones fluidas",
        image: "/img/stream-links-motion.png",
        tech: ["React", "TypeScript", "Tailwind CSS", "Motion"],
        code: "https://github.com/Enzo2023Dev/stream-links-motion",
        demo: "https://stream-links-motion.vercel.app/"
    },
];
---

<section id="projects" class="relative w-full py-12 md:py-24 lg:py-32 bg-gradient-to-b from-white to-muted/50 dark:from-black-pearl-950 dark:to-black-pearl-900 transition-colors duration-300">
    <div class="container px-4 md:px-6 relative z-10">
        <div class="flex flex-col items-center justify-center space-y-4 text-center">
            
            <div class="space-y-2">
            <h2 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl text-zinc-900 dark:text-zinc-50 transition-colors duration-300">Proyectos</h2>
            <p class="mx-auto max-w-[700px] text-zinc-600 dark:text-zinc-400 md:text-xl transition-colors duration-300">Algunos de mis trabajos recientes</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 pt-8">
            {Array.isArray(projects) && projects.length > 0 ? (
                projects.map((project, index) => (
                <Card key={index} className="bg-white dark:bg-zinc-900 border border-zinc-200 dark:border-zinc-700 transition-colors duration-300">
                    <div class="relative h-[200px] w-full rounded-t-md overflow-hidden">
                        <img src={project.image || "/placeholder.svg"} alt={project.title} class="object-cover rounded-t-md" />
                    </div>
                    <div class="p-6">
                        <h3 class="text-xl font-bold mb-2 text-zinc-900 dark:text-zinc-50 transition-colors duration-300">{project.title}</h3>
                        <p class="text-zinc-600 dark:text-zinc-400 mb-4 transition-colors duration-300">{project.description}</p>
                        <div class="flex flex-wrap gap-2 mb-4">
                            {project.tech.map((tech) => (
                            <Badge className="bg-zinc-100 dark:bg-zinc-800 text-zinc-900 dark:text-zinc-100 border border-zinc-200 dark:border-zinc-700 transition-colors duration-300">
                                {tech}
                            </Badge>
                            ))}
                        </div>
                        <div class="flex gap-2">
                            <Button variant="secondary" className="flex items-center gap-1 hover:text-zinc-900 dark:hover:text-zinc-50 transition-colors duration-300">
                            <a href={project.code} target="_blank" rel="noopener noreferrer" class="flex items-center gap-1">
                                <Github/>
                                Code
                            </a>
                            </Button>
                            <Button variant="secondary" className="flex items-center gap-1 hover:text-zinc-900 dark:hover:text-zinc-50 transition-colors duration-300">
                            <a href={project.demo} target="_blank" rel="noopener noreferrer" class="flex items-center gap-1">
                                <ExternalLink/>
                                Demo
                            </a>
                            </Button>
                        </div>
                    </div>
                </Card>
            ))
            ) : (
                <p class="col-span-full text-center text-zinc-600 dark:text-zinc-400 transition-colors duration-300">No hay proyectos disponibles.</p>
            )}
        </div>
    </div>
</section>